<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('./partials/header.ejs') %>
    </head>
<body>
    <h1 id="homebutton"><a href="/">RecommendMe</a></h1>
    <div class="container">
        <h1 id="homebutton">Movies</h1>
        <h2><a href="/movies/new">Add a Movie</a></h2>
        
            
            <section>
            <% for (let movie of movies) { %>
                    <div class="container reveal fade-bottom" id="movielist">
                    <a href="/movies/<%=movie._id%>">
                    <img alt="<%= movie.title%>" src="<%=movie.poster%>" id="poster-image">
                    </a>
                    </div>
            <%}%>
            </section>
    </div>
    <!-- https://alvarotrigo.com/blog/css-animations-scroll/ -->
    <script>
        function reveal() {
        var reveals = document.querySelectorAll(".reveal");

        for (var i = 0; i < reveals.length; i++) {
            var windowHeight = window.innerHeight;
            var elementTop = reveals[i].getBoundingClientRect().top;
            var elementVisible = 150;

            if (elementTop < windowHeight - elementVisible) {
            reveals[i].classList.add("active");
            } else {
            reveals[i].classList.remove("active");
            }
            }
        }

        window.addEventListener("scroll", reveal);
    </script>
    
</body>
</html>